function startWebcam(e) {
    navigator.getUserMedia({
        video: true,
        audio: true
    }, onSuccess, onError);

    function onSuccess(stream) {

        var video = document.getElementById('webcam');

        if (window.URL) {
            video.src = window.URL.createObjectURL(stream);
        } else {
            video.src = stream;
        }

        video.autoplay = true;
        //or video.play();
    }

    function onError() {}
}
    </script>

